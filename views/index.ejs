<!DOCTYPE html>
<html>
  <head>
    <title>医宠社区-首页</title>
    <%- include head %>
  </head>

  <body>
    <%- include('top', {username: username})  %>
<h3>【医宠之家】——论坛</h3>
    <div class="list">
      <% data.list.map(function(item, index) { %>
      <div class="row">
        <!-- 序号、作者、帖子标题、时间、编辑、删除 -->
    <span><%= index+1 %></span>
    <span><%= item.username %></span>
    <!-- 跳转详情页 detail.ejs -->
    <span><a href="/detail?id=<%=item.id%>"><%= item.title %></a></span>

      <span><%= item.time %></span>
      <span><a href="/write?id=<%=item.id%>&page=<%=data.curPage%>">编辑</a>
         <a href="/article/delete?id=<%=item.id%>&page=<%=data.curPage%>">删除</a></span>
    </div>
    <% }) %>

    <!-- 页码显示 -->
    <div class="pages">
      <% for(let i=1; i<=data.total; i++) { %>
                                                  <!-- 点击页码   把页码传递给后台 -->
        <a href="/?page=<%= i %>"><%= i %></a>
      <% } %>
    </div>
  </div>


  </body>
</html>
